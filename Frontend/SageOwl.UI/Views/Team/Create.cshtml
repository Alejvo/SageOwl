@model SageOwl.UI.ViewModels.Teams.CreateTeamViewModel

@{
    Layout = "~/Views/Shared/Layouts/_WorkspaceLayout.cshtml";
}
<style>
    .create_team{
        padding:20px;
        display:flex;
        flex-direction:column;
        width:100%;
        gap:20px;
    }
    .create_team_submit{
        border-radius: 10px;
        background-color: #A74E47;
        height: 40px;
        width: 120px;
        color: white;
        border: none;
        font-size: 18px;
    }

    .team_create_input {
        display: flex;
        flex-direction: column;
        width: 100%;
        gap:2px;
    }
    .team_create_input label{
        font-weight:bold;

    }
    .team_create_input input{
        height:40px;
        padding-left:8px;
        background-color: #F8F8F8;
        border: 1px #d4d4d4 solid;
        border-radius:10px;
    }

    .team_create_input textarea {
        resize:none;
        height:120px;
            padding-left: 8px;
            background-color: #F8F8F8;
            border: 1px #d4d4d4 solid;
            border-radius: 10px;
            padding-top:5px;
        }

    .search_bar_body {
        border: #555555 solid 1px;
        border-radius:10px 0 0 10px;
        height:40px;
        display:flex;
        flex-direction:row;
        align-items:center;
        gap:8px;
        padding:0 8px;
        width:100%;
    }

    .search_bar_body input{
        width:100%;
        border:none;
        outline:none;
        font-size:18px;
    }

    .search_bar_button {
        border: none;
    }

    .member-item{
        background-color: #EDEDED;
        height: 50px;
        display:flex;
        min-width:46%;
        max-width:46%;
        gap:10px;
        font-size:18px;
        display:flex;
        flex-direction:row;
        align-items:center;
        padding:0 10px;
        justify-content:space-between;
    }

    .remove-item{
        color: #E57373;
        border:none;
        font-size:24px;
    }

    .member-name{
        flex: 1;
        white-space: nowrap; 
        overflow: hidden;
        text-overflow: ellipsis;
        min-width: 0;
    }

    .member-list-profile{
        border-radius: 50%;
        background-color: #00838F;
        color: white;
        font-weight: bold;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .member-item-info{
        display:flex;
        flex-direction:row;
        gap:8px;
        flex:1;
        align-items:center;
        min-width: 0;
    }
</style>

<main class="team_create_main">
    <form asp-action="Create" asp-controller="Team" method="post" id="teamForm" class="create_team">
        <div class="team_create_input">
            <label asp-for="Name"></label>
            <input asp-for="Name" placeholder="Name"/>
        </div>

        <div class="team_create_input">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" placeholder="Description"></textarea>
        </div>

        <div class="team_create_members">
            <h6>Add Members</h6>
            <div class="search_bar">
                <div class="search_bar_body">
                    <i class="fa-solid fa-magnifying-glass" style="color:#555555"></i>
                    <input name="searchTerm" form="memberSearch" placeholder="Type a name..." />
                </div>
                <button type="submit" class="search_bar_button" form="memberSearch">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
                <div id="memberResults"></div>
            </div>
            <div id="member-container" class="member_container"></div>
        </div>

        <div class="team_create_members">
            <h6>Add Team Admins</h6>
            <div class="search_bar">
                <div class="search_bar_body">
                    <i class="fa-solid fa-magnifying-glass" style="color:#555555"></i>
                    <input name="searchTerm" form="adminSearch" placeholder="Type a name..." />
                </div>
                <button type="submit" class="search_bar_button" form="adminSearch">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
                <div id="adminResults"></div>
            </div>
            <div id="admin-container" class="member_container"></div>
        </div>

        <button type="submit" class="create_team_submit">Submit</button>
    </form>
    <form asp-action="Search" asp-controller="User" method="get" id="memberSearch"></form>
    <form asp-action="Search" asp-controller="User" method="get" id="adminSearch"></form>

</main>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    let memberIndex = 0;

    function getInitials(name) {
        if (!name) return "";
        const parts = name.trim().split(" ").filter(p => p.length > 0);

        if (parts.length === 1) {
            return parts[0][0].toUpperCase();
        }

        const first = parts[0][0].toUpperCase();
        const last = parts[parts.length - 1][0].toUpperCase();
        return first + last;
    }

    function setupSearch(formSelector, resultsSelector, visualContainerSelector, roleValue) {
        $(formSelector).submit(function (e) {
            e.preventDefault();

            $.get($(this).attr("action"), $(this).serialize())
                .done(function (data) {
                    $(resultsSelector).html(data);

                    if ($(resultsSelector).find('.search-result').length > 0) {
                        $(resultsSelector).show();
                    } else {
                        $(resultsSelector).hide();
                    }

                    $(resultsSelector).off('click.searchResult', '.search-result');
                    $(resultsSelector).on('click.searchResult', '.search-result', function () {
                        const userId = $(this).data("id");
                        const firstname = $(this).data("name") || "";
                        const surname = $(this).data("surname") || "";
                        const name = $.trim(firstname + " " + surname);
                        const initials = getInitials(name);

                        if (!userId) {
                            console.warn("search-result sin data-id válido:", this);
                            alert("No se pudo leer el id del usuario.");
                            return;
                        }

                        if ($(`#member-container input[type='hidden'][value='${userId}'], #admin-container input[type='hidden'][value='${userId}']`).length > 0) {
                            alert("Este usuario ya fue agregado.");
                            return;
                        }

                        const idx = memberIndex++;

                        const $item = $(`
                            <div class="member-item">
                                <div class="member-item-info">
                                    <div class="member-list-profile">${initials}</div>
                                    <span class="member-name">${escapeHtml(name)} <small>(${roleValue})</small></span>
                                </div>
                                <button type="button" class="remove-item">
                                    <i class="fa-solid fa-xmark"></i>
                                </button>
                                <input type="hidden" name="Members[${idx}].UserId" value="${userId}" />
                                <input type="hidden" name="Members[${idx}].Role" value="${roleValue}" />
                            </div>
                        `);

                        $(visualContainerSelector).append($item);

                        $(resultsSelector).hide();
                    });

                })
                .fail(function () {
                    $(resultsSelector).hide();
                });
        });
    }

    setupSearch("#memberSearch", "#memberResults", "#member-container", "Member");
    setupSearch("#adminSearch",  "#adminResults",  "#admin-container",  "Admin");

    $(document).on('click', '.remove-item', function () {
        $(this).closest('.member-item').remove();
        reindexMembers();
    });

    function reindexMembers() {
        $('#member-container .member-item, #admin-container .member-item').each(function (i, el) {
            $(el).find("input[name$='.UserId']").attr("name", `Members[${i}].UserId`);
            $(el).find("input[name$='.Role']").attr("name", `Members[${i}].Role`);
        });

        memberIndex = $('#member-container .member-item, #admin-container .member-item').length;
    }

    $(document).on('click', function (e) {
        const insideMemberForm = $(e.target).closest('#memberSearch, #memberResults').length;
        const insideAdminForm  = $(e.target).closest('#adminSearch, #adminResults').length;
        if (!insideMemberForm) $('#memberResults').hide();
        if (!insideAdminForm)  $('#adminResults').hide();
    });

    function escapeHtml(unsafe) {
        return String(unsafe)
            .replace(/&/g, "&amp;")
            .replace(/</g, "&lt;")
            .replace(/>/g, "&gt;")
            .replace(/"/g, "&quot;")
            .replace(/'/g, "&#039;");
    }
</script>
