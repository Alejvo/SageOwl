@{
    ViewData["Title"] = "Workspace";
    Layout = "~/Views/Shared/Layouts/_WorkspaceLayout.cshtml";
}

@model HomeWorkspaceViewModel

<main class="workspace_body_main">
    <div class="workspace_body_info">
            <p>Advisements</p>
            <a>see all</a>
    </div>
    <div class="workspace_body_main_announcements">
        @if(Model.Announcements is null)
        {
            <p>No Announcements yet.</p>
        }
        else
        {
            @foreach (var announcement in Model.Announcements)
            {
                @await Html.PartialAsync("~/Views/Shared/PartialViews/_Announcement.cshtml", announcement)
            }
        }

    </div>
    <div class="workspace_body_info">
       <p>Forms</p>
       <a>see all</a>
    </div>
    <div class="workspace_body_main_announcements">
        @if (Model.Forms is null)
        {
            <p>No Forms yet.</p>
        }
        else
        {
            @foreach(var form in Model.Forms)
            {
                @await Html.PartialAsync("~/Views/Shared/PartialViews/_FormCard.cshtml",form)
            }
        }
    </div>
</main>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).on("click", ".nav-icon", function () {
            const targetUrl = $(this).data("url");
            if (targetUrl) {
                window.location.href = targetUrl;
            }
        });
    </script>
}
