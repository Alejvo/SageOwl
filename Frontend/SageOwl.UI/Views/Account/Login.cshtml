@model SageOwl.UI.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
    <div class="login">
        <div class="login_form">
            <p class="login_form_title">Hello, Again</p>
        <form asp-action="Login" method="post" id="login_form" >
             <div class="login_form_wrapper">
                <div class="login_form_input">
                        <div class="login_form_input_img">
                        <img />
                    </div>
                    <div class="login_form_input_container">
                        <input asp-for="Email" placeholder="Email or username" style="border:none;width:100%;outline:none;" />
                    </div>
                </div>
                <div class="login_form_input">
                    <div class="login_form_input_img">
                        <img />
                    </div>
                    <div class="login_form_input_container">
                        <input asp-for="Password" placeholder="Password" type="password" style="border:none;width:100%;outline:none;" />
                    </div>
                </div>
                <a href="/account/register" class="login_forgot hypertext">I forgot my password</a>
                <button type="submit" class="login_btn">Log In</button>
            </div>

        </form>

            <div class="login_info">
                <p>You don't have an account?</p>
            <a class="hypertext" href="/account/register">Sign Up Now</a>
            </div>
        </div>
        <div class="login_img_container">
        </div>
    </div>


